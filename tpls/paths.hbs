const fs = require('fs');
const path = require('path');

const appRootPath = fs.realpathSync(process.cwd());

const getResolvePath = relativePath => path.resolve(appRootPath, relativePath);


module.exports = {
    appSrc: getResolvePath('src'),
    appPath: getResolvePath('.'),
    appIndexjs: getResolvePath('src/index.js'),
    appTemplate: getResolvePath('index.ejs'),
    appBuild: getResolvePath('dist')
};